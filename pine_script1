    //table.cell(tbl, 0, 3, ' fast_conv_ema '+ str.tostring(fast_conviction_ema_value, '#.##') + ' slow_conv_ema '+ str.tostring(slow_conviction_ema_value, '#.##'), bgcolor=conviction_color)

