bopen = lin_reg ? ta.linreg(open, linreg_length, 0) : open
bhigh = lin_reg ? ta.linreg(high, linreg_length, 0) : high
blow = lin_reg ? ta.linreg(low, linreg_length, 0) : low
bclose = lin_reg ? ta.linreg(close, linreg_length, 0) : close

r_open_close = bopen < bclose
signal = sma_signal ? ta.sma(bclose, signal_length) : ta.ema(bclose, signal_length)

period1 = input(9, "obv Period1")  //50
period2 = input(21, "obv Period2") //200
obv = ta.cum(math.sign(ta.change(close)) * volume)
//obv = cum(change(close) > 0 ? volume : change(close) < 0 ? -volume : 0*volume)
obv_ma1=ta.ema(obv,period1)
obv_ma2=ta.ema(obv,period2)

call = ta.crossover(close, signal)  and (obv_ma1>obv_ma2) and bullish_conviction_confirmed // and close  > signal
put = ta.crossunder(bclose, signal) and (obv_ma1<obv_ma2) and bearish_conviction_confirmed//and bopen  < signal

