else if fast_conviction_ema_value <= slow_conviction_ema_value and obv_ma1 <= obv_ma2 and bclose <= signal
    final_color := color.red
    call_put := " Buy Puts"
else 
    final_color := color.yellow
    call_put := " NOT TRADE "
var tbl = table.new(position.top_right, 1, 4)
if barstate.islast and show_info
    table.cell(tbl, 0, 0, 'You Should ' + str.tostring(call_put), bgcolor=final_color) //bclose, signal) and (ma1>ma2)
    table.cell(tbl, 0, 1, ' bclose '+ str.tostring(bclose, '#.##') + ' signal '+ str.tostring(signal, '#.##'), bgcolor=bclose_signal_color)
