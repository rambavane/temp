// Time Warp timeframe
// Set the appropriate timeframe based on trading mode
timeframe_func() =>
    timeframe = timeframe.period 
    if time_warp == 'off'
        timeframe := timeframe.period
    else if time_warp == '1m'
        timeframe := '1'
    else if time_warp == '2m'
        timeframe := '2'
    else if time_warp == '3m'
        timeframe := '3'
    else if time_warp == '4m'
        timeframe := '4'
    else if time_warp == '5m'
        timeframe := '5'
    else if time_warp == '10m'
        timeframe := '10'
    else if time_warp == '15m'
        timeframe := '15'
    else if time_warp == '20m'
        timeframe := '20'
    else if time_warp == '30m'
        timeframe := '30'
    else if time_warp == '1h'
        timeframe := '60'
    else if time_warp == '2h'
        timeframe := '120'
    else if time_warp == '4h'
        timeframe := '240'
    else if time_warp == 'D'
        timeframe := 'D'
    else if time_warp == 'W'
        timeframe := 'W'
    else if time_warp == 'M'
        timeframe := 'M'
    else if time_warp == 'Y'
        timeframe := '12M'
    else
        timeframe := timeframe.period

// Calculations
