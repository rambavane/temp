plotshape(put, title='PUT', text='PUT', color=color.new(color.red, 0), location=location.abovebar, textcolor=color.new(color.red, 0))
//plotshape(buy,  title = "Buy",  text = 'Buy',color=color.green,location = location.belowbar,textcolor = color.green)//,  style = shape.labelup,   location = location.belowbar, color= color.green, textcolor = color.white, transp = 0, size = size.tiny)
//plotshape(sell, title = "Sell", text = 'Sell',color=color.red,location = location.abovebar,textcolor = color.red)
show_info = input(true, 'Show Info Label')
conviction_color = fast_conviction_ema_value >= slow_conviction_ema_value ? color.green : color.red
obv_ema_color = obv_ma1 >= obv_ma2 ? color.green : color.red
