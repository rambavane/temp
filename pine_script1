a = input(1, title='Key Vaule. \'This changes the sensitivity\'')
c = input(10, title='ATR Period')
ha = input(true, title='Signals from Heikin Ashi Candles')

xATR = ta.atr(c)
nLoss = a * xATR

src = ha ? request.security(ticker.heikinashi(syminfo.tickerid), timeframe.period, close, lookahead=barmerge.lookahead_off) : close

xATRTrailingStop = 0.0
iff_1 = src > nz(xATRTrailingStop[1], 0) ? src - nLoss : src + nLoss
iff_2 = src < nz(xATRTrailingStop[1], 0) and src[1] < nz(xATRTrailingStop[1], 0) ? math.min(nz(xATRTrailingStop[1]), src + nLoss) : iff_1
xATRTrailingStop := src > nz(xATRTrailingStop[1], 0) and src[1] > nz(xATRTrailingStop[1], 0) ? math.max(nz(xATRTrailingStop[1]), src - nLoss) : iff_2

pos = 0
iff_3 = src[1] > nz(xATRTrailingStop[1], 0) and src < nz(xATRTrailingStop[1], 0) ? -1 : nz(pos[1], 0)
pos := src[1] < nz(xATRTrailingStop[1], 0) and src > nz(xATRTrailingStop[1], 0) ? 1 : iff_3

xcolor = pos == -1 ? color.red : pos == 1 ? color.green : color.blue

ema = ta.ema(src, 2)
above = ta.crossover(ema, xATRTrailingStop)
below = ta.crossunder(ema, xATRTrailingStop)  //, ema)

buy = false //src > xATRTrailingStop and above ? true : false
sell = false //src < xATRTrailingStop and below ? true : false

///////////////////////////////////////////////////////////////////////

long = false
short = false

shortCondition = fast_conviction_ema_value <= slow_conviction_ema_value and obv_ma1 <= obv_ma2 and bclose <= signal
//ta.crossunder(bclose, signal) and (ma1<ma2) and (fast_ema_value < slow_ema_value)// put  // and bearish_conviction sell and put //and crossunder(fast_ema_value, slow_ema_value)
longCondition = fast_conviction_ema_value >= slow_conviction_ema_value and obv_ma1 >= obv_ma2 and bclose >= signal
//ta.crossover(bclose, signal) and (obv_ma1>obv_ma2)  and  close > signal and (fast_ema_value > slow_ema_value)// and bullish_conviction call  //buy and call //and crossover(fast_ema_value, slow_ema_value)

shortExitCondition = buy    or (fast_ema_value > slow_ema_value) or bclose >= signal//or ma1>ma2 or call or longCondition
longExitCondition = sell    or (fast_ema_value < slow_ema_value) or bclose <= signal//or ma1<ma2 or put or shortCondition


